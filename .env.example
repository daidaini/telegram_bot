# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# News API (GNews)
# Get your free API key from: https://gnews.io/
GNEWS_API_KEY=your_gnews_api_key_here

# Optional: Default settings
DEFAULT_CITY=Beijing
DEFAULT_NEWS_COUNTRY=cn
DEFAULT_NEWS_LANGUAGE=zh

# RSS Feed Configuration (optional)
# Configure custom RSS feeds as JSON array
# RSS_FEEDS=[{"name": "Feed Name", "url": "https://example.com/rss.xml", "category": "general"}]
# If not set, will use default RSS feeds (BBC, Reuters, CNN)
MAX_ARTICLES_PER_FEED=3

# RSS Channel Forwarding (optional)
# Automatically forward RSS news to a Telegram channel when /rss_news is called
RSS_FORWARD_TO_CHANNEL=cangshuing  # Channel username (without @)
ENABLE_RSS_FORWARDING=true         # Set to 'true' to enable forwarding

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Custom API base URL (for OpenAI-compatible APIs)
# Examples:
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_BASE_URL=https://api.deepseek.com/v1
# OPENAI_BASE_URL=https://your-custom-llm-api.com/v1
OPENAI_BASE_URL=

# Optional: Default model to use
# Common models for different providers:
# - OpenAI: gpt-4, gpt-3.5-turbo, gpt-4-turbo
# - DeepSeek: deepseek-chat, deepseek-coder
# - Local models: llama2, mistral, qwen, etc.
DEFAULT_MODEL=gpt-3.5-turbo